<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tikovce.myapplication.MainActivity"
    android:orientation="vertical">

    <EditText
    android:id="@+id/text_input"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="@string/textLetter"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickButtonOne"
        android:text="@string/letter" />

    <Button
        android:id="@+id/button2_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/letter2"
        android:onClick="onClickButtonTwo"/>


    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/contactID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/bademi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
